/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family:PingFangSC-Regular;
} 
.userinfo-avatar{
  text-align:center;
  background-color:#efeff4;
}
.userinfo-avatar-img{
  width:2.6rem;
  height:2rem;
  margin-top:1.3rem;
}
.userinfo-nickname{
  color:#000 !important;
}
.pull-left{
  float:left;
}
.pull-right{
  float:right;
}
.clearfix:before,
.clearfix:after {
  display: table;
  content: " ";
}
.clearfix:after {
  clear: both;
}
.bk{
  background-color:#fff;
}
.noborder{
  border:none !important;
}
.hide{
  display:none;
}
.show{
  display:block;
}